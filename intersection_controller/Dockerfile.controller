# Intersection Controller Dockerfile
# Python 3.13.2 - For Intersection Central PC

# NOTE: If torch/sumolib have compatibility issues with 3.13,
# uncomment the following line and comment the 3.13 line:
# FROM python:3.12-slim

FROM python:3.13.2-slim

LABEL maintainer="Traffic Control System"
LABEL description="Intersection Controller - Real/Simulation Mode"

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for caching
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy source code
COPY src/ ./src/
COPY setup.py .

# Install package
RUN pip install -e .

# Environment variables
ENV PYTHONUNBUFFERED=1
ENV MQTT_BROKER=mqtt-broker
ENV MQTT_PORT=1883

# Default command (override with actual intersection_id)
CMD ["python", "-m", "src.main", "--mode", "simulation", "--intersection_id", "1", "--network", "/data/sioux.net.xml"]
